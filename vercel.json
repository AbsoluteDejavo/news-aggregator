{
    "version": 2,
    "builds": [
        {
            "src": "backend/app.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/app.py"
        },
        {
            "src": "/static/(.*)",
            "dest": "/frontend/$1"
        },
        {
            "src": "/(.*)\\.(.+)",
            "dest": "/frontend/$1.$2"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/index.html"
        }
    ]
}
